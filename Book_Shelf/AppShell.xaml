<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Book_Shelf.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Book_Shelf.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Book_Shelf">

    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate views:ManagedBookListPage}"/>
        </Tab>
        <Tab Title="書籍登録">
            <ShellContent ContentTemplate="{DataTemplate views:RegisterBookPage}"/>
        </Tab>
    </TabBar>

</Shell>
